{
    "manifest_version": 3,
    "name": "Weather App",
    "description": "A weather extension with a simplistic ui, no paid plans, just weather at your fingertips",
    "version": "1.0",
    "action": {
      "default_icon": "assets/icons/icon.png",
      "default_popup": "client.html",
      "default_popup_width": 400,
      "default_popup_height": 600
    },
    "permissions": [
      "offscreen",
      "geolocation"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }